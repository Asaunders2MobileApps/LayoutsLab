                            BackgroundColor="{x:Static local:Constants.ForegroundColor}"
                            HorizontalOptions="Center"/>
                    <Label Text="a button"
                           TextColor="{x:Static local:Constants.BackgroundColor}"
                            BackgroundColor="{x:Static local:Constants.ForegroundColor}"
                            HorizontalOptions="Center"/>
                    <Label Text="this content"
                           TextColor="{x:Static local:Constants.BackgroundColor2}"
                            BackgroundColor="{x:Static local:Constants.ForegroundColor}"
                            HorizontalOptions="Center"/>
                    <Label Text="is the" 
